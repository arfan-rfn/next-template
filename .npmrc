# Use pnpm for this project
# https://pnpm.io/npmrc

# Hoist all dependencies to node_modules/.pnpm
# This helps with compatibility for tools that expect flat node_modules
shamefully-hoist=false

# Use strict peer dependencies
strict-peer-dependencies=false

# Auto-install peers
auto-install-peers=true

# Save exact versions (no ^ or ~)
save-exact=false
